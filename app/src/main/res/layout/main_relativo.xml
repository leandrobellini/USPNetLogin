<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/logo_USPNet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/semfio_logo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/texto_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UsuÃ¡rio:"
        android:layout_below="@id/logo_USPNet"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="usuario@usp.br"
        android:layout_toRightOf="@id/texto_usuario"
        android:layout_below="@id/logo_USPNet"
        android:paddingTop="30dp"/>

    <TextView
        android:id="@+id/texto_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha:"
        android:layout_below="@id/texto_usuario"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*******"
        android:layout_toRightOf="@id/texto_usuario"
        android:layout_below="@id/texto_usuario"
        android:paddingTop="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto_senha"
        android:text="Logar"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"/>



</RelativeLayout>